      "0.1.3": {
        "cordova": ">= 6.4.0",
        "cordova-ios": ">=4.3.0"
      }
    }
  },
  "keywords": [
    "cordova",
    "cordova-plugin",
    "ecosystem:cordova",
    "cordova-android",
    "cordova-ios",
    "lottie",
    "lottie-android",
    "lottie-ios",
    "bodymovin",
    "swift",
    "kotlin"
  ],
  "repository": "timbru31/cordova-plugin-lottie-splashscreen",
  "bugs": {

{
  "name": "cordova-plugin-lottie-splashscreen",
  "version": "0.8.1",
  "description": "Cordova plugin to show Lottie animations as the splash screen with Airbnb's Lottie wrapper",
  "author": "Tim Brust <github@timbrust.de>",
  "license": "MIT",
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "npm run lint:android && npm run lint:ios && npm run lint:typescript",
    "lint:android": "ktlint src/android",
    "lint:ios": "swiftlint",
    "lint:typescript": "tslint -c tslint.json 'www/**/*.ts'",
    "prepublishOnly": "npm run build",
    "release": "standard-version -s -a"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@types/cordova": "^0.0.34",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "replace": "^1.1.5",
    "standard-version": "^7.1.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "cordova": {
    "id": "cordova-plugin-lottie-splashscreen",
    "platforms": [
      "android",
      "ios"
    ]
  },
  "engines": {
    "cordovaDependencies": {
      "0.8.0": {
        "cordova": ">= 9.0.0",
        "cordova-android": ">=8.0.0",
        "cordova-ios": ">=5.0.0",
        "apple-ios": ">=9.0.0"
      },
      "0.6.0": {
        "cordova": ">= 9.0.0",
        "cordova-android": ">=7.0.0",
        "cordova-ios": ">=5.0.0",
        "apple-ios": ">=9.0.0"
      },
      "0.5.1": {
        "cordova": ">= 6.4.0",
        "cordova-android": ">=7.0.0",
        "cordova-ios": ">=4.3.0"
